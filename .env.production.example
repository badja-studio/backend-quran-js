# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

NODE_ENV=production
PORT=3000

# External Database Configuration (Managed PostgreSQL)
DB_HOST=your-production-db-host.com
DB_PORT=5432
DB_NAME=quran_db
DB_USER=quran_user
DB_PASSWORD=your-secure-password-here

# API Documentation
API_TITLE=Quran API
API_VERSION=1.0.0
API_DESCRIPTION=API for Quran management system

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=30m

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# Redis Configuration (Production)
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-strong-redis-password-here
REDIS_DB=0
REDIS_MAX_RETRIES=10
REDIS_RETRY_DELAY=3000
REDIS_CONNECT_TIMEOUT=10000

# Cache Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=60
CACHE_MASTER_DATA_TTL=300
CACHE_DASHBOARD_TTL=7200
WARM_CACHE_ON_STARTUP=true

# Worker Configuration
WORKER_DASHBOARD_REFRESH_CRON="0 */2 * * *"
WORKER_EXPORT_CONCURRENCY=4
WORKER_EXPORT_TIMEOUT=600000
